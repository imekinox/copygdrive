{
  "name": "gdrive-copier",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:cf": "next build && npx @cloudflare/next-on-pages",
    "start": "next start",
    "lint": "eslint",
    "pages:dev": "wrangler pages dev .vercel/output/static --compatibility-date=2024-12-01 --d1=DB=gdrive-copier-db",
    "pages:deploy": "yarn build:cf && wrangler pages deploy .vercel/output/static --project-name=gdrive-copier",
    "worker": "tsx workers/queue-worker.ts",
    "worker:dev": "tsx watch workers/queue-worker.ts",
    "worker:multi": "concurrently \"yarn worker\" \"yarn worker\" \"yarn worker\""
  },
  "dependencies": {
    "@cloudflare/next-on-pages": "^1.13.16",
    "@googleapis/drive": "^15.0.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.2",
    "@tanstack/react-query": "^5.87.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "googleapis": "^159.0.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "^5.0.0-beta.29",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "vercel": "^47.0.5",
    "wrangler": "^4.34.0"
  }
}
